  "scripts": {
    "start": "pm2 start ./dist/server.js -i 2 --attach --watch",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc --project tsconfig.json",
    "dev": "NODE_ENV=development nodemon --config nodemon.json",
    "test": "NODE_ENV=test jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false",
    "prisma:init": "dotenv -e .env.development -- npx prisma init --datasource-provider postgresql",
    "prisma:mig": "dotenv -e .env.development -- npx prisma migrate dev --name init",
    "prisma:gen": "npx prisma generate"
  },
